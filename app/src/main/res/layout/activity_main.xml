<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahul.sih.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/thermometer_button"
        android:text="thermometer"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/thermometer_button"
        android:id="@+id/pressure_button"
        android:text="pressure"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/pressure_button"
        android:id="@+id/humidity_button"
        android:text="humidity"/>

</android.support.constraint.ConstraintLayout>
